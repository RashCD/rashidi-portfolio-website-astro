---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { Image } from "astro:assets";
// import "../styles/globals.css";
---

<header>
	<nav>
		<h2>
			<a href="/" aria-label={SITE_TITLE}>
				<Image
					width={50}
					height={50}
					alt="image of rashidi"
					src="/images/rashidi-image-small.jpeg"
					class="rounded-full"
				/>
			</a>
		</h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/project">Project</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/RashCD" target="_blank">
				<span class="sr-only">Go to Rashidi's GitHub repo</span>
				<svg
					viewBox="0 0 16 16"
					aria-hidden="true"
					width="32"
					height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
			<a
				href="https://www.linkedin.com/in/rashidi-abd-rashid/"
				target="_blank"
			>
				<span class="sr-only">Go to Rashidi's LinkedIn profile</span>
				<svg
					viewBox="0 0 24 24"
					aria-hidden="true"
					width="32"
					height="32"
				>
					<rect width="24" height="24" rx="4" fill="currentColor"
					></rect>
					<path
						d="M6.94 8.5C7.8 8.5 8.5 7.8 8.5 6.94C8.5 6.08 7.8 5.38 6.94 5.38C6.08 5.38 5.38 6.08 5.38 6.94C5.38 7.8 6.08 8.5 6.94 8.5ZM8.25 9.75H5.63V18.25H8.25V9.75ZM12.5 13.25C12.5 12.25 13.25 11.5 14.25 11.5C15.25 11.5 16 12.25 16 13.25V18.25H18.62V13.25C18.62 11.01 16.74 9.75 14.25 9.75C11.76 9.75 9.88 11.01 9.88 13.25V18.25H12.5V13.25Z"
						fill="white"></path>
				</svg>
			</a>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		display: inline-flex;
		line-height: 1.75;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--black);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
	.rounded-full {
		border-radius: 50%;
	}
</style>
